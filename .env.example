# My Network Scanner (MyNeS) Environment Variables
# Copy this file to .env and set your own values

# Flask Configuration
FLASK_SECRET_KEY=your_random_secret_key_here_minimum_32_characters_long

# Master Password for Credential Encryption
LAN_SCANNER_PASSWORD=your_secure_master_password_here

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5883

# Network Configuration (optional)
# DEFAULT_NETWORK_RANGE=192.168.1.0/24
# SCAN_TIMEOUT=30
# MAX_THREADS=5

# Database Configuration (optional)
# OUI_UPDATE_INTERVAL=7  # days
# SCAN_HISTORY_RETENTION=30  # days

# Security Configuration (optional)
# ENCRYPTION_ITERATIONS=100000
# CREDENTIAL_TIMEOUT=3600  # seconds

# Docker Configuration (optional)
# DOCKER_SOCKET_PATH=/var/run/docker.sock
# DOCKER_SCAN_ENABLED=true

# Logging Configuration (optional)
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log
# LOG_MAX_SIZE=10MB
# LOG_BACKUP_COUNT=5